@model Recensione
@{
    ViewData["Title"] = $"Aggiungi Recensione per {ViewBag.LibroTitolo}";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddRecensione">
    <input type="hidden" name="libroId" value="@ViewBag.LibroId" />

    <div class="form-group">
        <label asp-for="Voto" class="control-label"></label>
        <input asp-for="Voto" class="form-control" min="1" max="10" />
        <span asp-validation-for="Voto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Salva" class="btn btn-primary" />
    </div>
</form>